      &lt;tr&gt;
          &lt;td&gt;Channel Name&lt;/td&gt;
          &lt;td&gt;MediumFast&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;PSK&lt;/td&gt;
          &lt;td&gt;AQ==&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;Uplink Enabled&lt;/td&gt;
          &lt;td&gt;✅ Uključeno&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;Downlink Enabled&lt;/td&gt;
